<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.s530714.team05_travel_jot.Home">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:text="Email ID : "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp"
            android:hint="Anusha@gmail.com"
            android:textAllCaps="false"
            android:textColor="#456d51" />
    </RelativeLayout>

    <Button
        android:id="@+id/button6"
        android:layout_width="152dp"
        android:layout_height="53dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="380dp"
        android:background="@drawable/p24"
        android:onClick="Entry"
        android:text=""
        android:textColor="#057523"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.059" />

</android.support.constraint.ConstraintLayout>
